<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme"
    tools:context=".signup">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="B I L L  S P L I T"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/name_id"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="197dp"
        android:hint="Name"
        android:singleLine="true" />
    <TextView
        android:layout_below="@id/name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/email_id"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_id"
        android:layout_centerHorizontal="true"
        android:hint="email"
        android:singleLine="true" />

    <Button
        android:id="@+id/signUp_id"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp"
        android:background="@drawable/round"
        android:text="Signup"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="46dp"
        android:layout_alignBottom="@+id/name_id"
        android:layout_marginBottom="-1dp"
        android:layout_toStartOf="@+id/name_id"
        app:srcCompat="@drawable/ic_person_black_24dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignStart="@+id/imageView"

        app:srcCompat="@drawable/ic_security_black_24dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="37dp"
        android:layout_height="43dp"
        android:layout_alignTop="@+id/password_id"
        android:layout_toStartOf="@+id/name_id"
        app:srcCompat="@drawable/ic_security_black_24dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="217dp"
        android:layout_height="118dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/icon" />

    <EditText
        android:id="@+id/password_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signUp_id"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="36dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/email_id"
        android:layout_marginEnd="3dp"
        android:layout_toStartOf="@+id/name_id"
        app:srcCompat="@drawable/ic_mail_outline_black_24dp" />

    <TextView
        android:id="@+id/oldAcc_id"
        android:layout_width="298dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Already have  an Account?"
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/MobSign_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_id"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Mobile No."
        android:inputType="number" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:layout_below="@+id/email_id"
        android:layout_toStartOf="@+id/name_id"
        app:srcCompat="@drawable/ic_phone_android_black_24dp" />

</RelativeLayout>